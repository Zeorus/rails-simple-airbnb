<div class="map" style="background-image: url(<%= @flat.img %>)"></div>
<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="flat-show-card">
        <h1><%= @flat.name %></h1>
        <p class="flat-show-address"><%= @flat.address %></p>
      </div>
      <div class="flat-show-card">
        <h3>A bit more about this flat...</h3>
        <p><%= @flat.description %></p>
        <div class="map"></div>
      </div>
    </div>

    <div class="col-4">
      <div class="flat-show-card">
        <h5>Book this place!</h5>

        <form action="">
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">From:</span>
            <input type="text" class="form-control" placeholder="12/10/2017" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-addon" id="basic-addon1">To:</span>
            <input type="text" class="form-control" placeholder="18/10/2017" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
        </form>
      </div>
      <div class="flat-show-card">
        <h3>Details</h3>
        <div class="d-flex">
          <div class="d-flex">
            <i class="icon-group mr-2"></i><span><%= @flat.number_of_guests %></span>
          </div>
          <div class="d-flex ml-3">
            <i class="icon-eur mr-2"></i> <%= @flat.price_per_night %>
          </div>
        </div>
      </div>
      <div class="flat-show-card">
        <div class="d-flex align-items-center justify-content-between">
          <h6 class="mb-0">Share</h6>

          <div class="d-flex">
            <i class="icon-facebook-sign mr-2"></i>
            <i class="icon-twitter-sign mr-2"></i>
            <i class="icon-pinterest-sign mr-2"></i>
            <i class="icon-envelope"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>